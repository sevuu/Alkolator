<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Alkolator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Alkolator"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutWidth="200"
    Title="Alkolator">

    <!-- Flyout menu -->
    <FlyoutItem Title="Main Page">
        <Tab>
            <ShellContent Title="Main Page" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Credits">
        <Tab>
            <ShellContent Title="Credits Page" ContentTemplate="{DataTemplate local:CreditsPage}" />
        </Tab>
    </FlyoutItem>

</Shell>
