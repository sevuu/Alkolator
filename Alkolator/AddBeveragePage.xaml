<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alkolator.AddBeveragePage"
             Title="Dodaj Trunek">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Nazwa" />
        <Entry x:Name="tbName" Placeholder="Nazwa trunku" />

        <Label Text="ml" />
        <Entry x:Name="tbMl" Placeholder="Ilość (ml)" Keyboard="Numeric"/>

        <Label Text="% Alkoholu" />
        <Entry x:Name="tbVolt" Placeholder="Procent alkoholu" Keyboard="Numeric"/>

        <Label Text="Cena" />
        <Entry x:Name="tbPrice" Placeholder="Cena" Keyboard="Numeric"/>

        <Button Text="Dodaj" Clicked="AddBtn_Click"/>
    </VerticalStackLayout>
</ContentPage>
