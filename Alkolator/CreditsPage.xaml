<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alkolator.CreditsPage"
             Title="Credits">

    <Grid Padding="10">

        <VerticalStackLayout Spacing="10">

            <Label Text="Credits"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label Text="Tanio niekoniecznie znaczy gorzej (a na pewno nie słabiej)..."
                   FontSize="25" />


            <Button Text="Czym jest współczynnik spejsona?" Clicked="SpejsonTapped"/>

            <Button Text="Kup mi piwo" Clicked="OnPayPalTapped"/>
            <Button Text="GitHub" Clicked="OnGitHubTapped"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
